<h1 class="title is-1"> Didata </h1>

<section class="bd-index-fullscreen hero is-fullheight is-light">
  <div class="hero-body">
    <div class="container">
      <h2 class="title is-2">
        Tópico: <%= @topic.name  %>
      </h2>
      <h3 class="title is-3">
        Subtópicos
      </h3>
      <%= for subtopic <- @topic.subtopics do %>
        <nav class="buttons is-centered">
          <a class="button is-large is-primary" href="#">
            <%= subtopic.name %>
          </a>
        </nav>
      <% end %>
    </div>
  </div>
</section>
