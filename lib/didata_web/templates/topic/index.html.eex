<h1 class="title">Listing Topics</h1>

<div>
  <%= link "New Topic", to: Routes.topic_path(@conn, :new), class: "button is-primary" %>
</div>

<div class="table-container">
  <table class="table is-narrow is-striped is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= for topic <- @topics do %>
        <tr>
          <td><%= topic.name %></td>
          <td>
            <span><%= link "Show", to: Routes.topic_path(@conn, :show, topic), class: "button is-small" %></span>
            <span><%= link "Edit", to: Routes.topic_path(@conn, :edit, topic), class: "button is-small is-primary" %></span>
            <span><%= link "Delete", to: Routes.topic_path(@conn, :delete, topic), method: :delete, data: [confirm: "Are you sure?"], class: "button is-small is-danger" %></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
